  <thead>
    <tr>
      <th>Apartamento</th>
      <th>Localidad</th>
      <th>Precio por noche</th>
      <th>Check-in</th>
      <th>Check-out</th>
    </tr>
  </thead>
  <tbody>
    <% reservations.forEach(reservation => { %>
      <tr>
        <td><%= reservation.apartment?.title %></td>
        <td><%= reservation.apartment?.location?.city.nm%></td>
        <td><%= reservation.apartment?.price %> â‚¬</td>
        <td><%= new Date(reservation.checkIn).toLocaleDateString() %></td>
        <td><%= new Date(reservation.checkOut).toLocaleDateString() %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
</body>

